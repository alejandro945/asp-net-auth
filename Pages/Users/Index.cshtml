@page
@model asp_net_auth.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="card text-center">
  <div class="card-header">
      <h3>
          @Html.DisplayFor(m => Model.u.Username)
      </h3>
  </div>
  <div class="card-body mb-3">
    <h5 class="card-title">User Basic Data</h5>
    <p class="card-text"> Name: @Html.DisplayFor(m => Model.u.Name) </p>
    <p class="card-text"> LastName:  @Html.DisplayFor(m => Model.u.LastName) </p>
    <p class="card-text"> Birth: @Html.DisplayFor(m => Model.u.Birth) </p>
     <div class="row mb-2">
         <div class="col-md-6 offset-md-3">
             <a asp-page="Create"><input type="button" class="btn btn-danger w-50" value="New User" /></a>
         </div>
      </div>
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <a asp-page="../Index"><input type="button" class="btn btn-warning w-50" value="Log out"/></a>
          </div>    
          </div>
  </div>
  <div class="card-footer text-muted">
    All rights reserved
  </div> 
</div>
<h1>User Table</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Birth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID"><input type="button" value="Edit" class = "btn btn-primary"/></a>|
                <a asp-page="./Details" asp-route-id="@item.ID"><input type="button" value="Details"  class = "btn btn-success"></a> |
                <a asp-page="./Delete" asp-route-id="@item.ID"><input type="button" value="Delete"  class = "btn btn-danger"/></a>
            </td>
        </tr>
}
    </tbody>
</table>
